@model IEnumerable<CoverType>


<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> &nbsp; Create New Cover Type
			</a>
		</div>
	</div>
	<br /><br />
<table class="table-bordered table-striped table ">
	<thead>
	<tr>
	<th>
		Cover Type
	</th>
	<th class="text-center">
	 Edit/Delete
     </th>
	</tr>
	</thead>
	<tbody >
	  @foreach(var obj in Model){
	  <tr>		
			<td>
				@obj.Name
			</td>			
					<td class="text-center">
						<div class="w-10 btn-group" role="group">
							<a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id"
						   class="btn btn-primary mx-1"> <i class="bi bi-pencil-square"></i> Edit</a>
						</div>
						<div class="w-10  btn-group" role="group">
							<a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id"
						   class="btn btn-primary mx-1"> <i class="bi bi-trash3-fill"></i> Delete</a>
						</div>
			</td>
	   </tr>
		}
	</tbody>
		
</table>
</div>